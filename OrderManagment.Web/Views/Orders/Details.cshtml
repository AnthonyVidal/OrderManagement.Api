@model OrderManagement.Web.Models.OrderViewModel

<h2>Detalle de Orden</h2>

<dl class="row">
    <dt class="col-sm-3">Cliente</dt>
    <dd class="col-sm-9">@Model.Cliente</dd>

    <dt class="col-sm-3">Total</dt>
    <dd class="col-sm-9">@Model.Total</dd>

    <dt class="col-sm-3">Fecha</dt>
    <dd class="col-sm-9">@Model.CreatedAt</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
